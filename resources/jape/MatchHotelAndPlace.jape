Phase: HotelNames
Input: Token Lookup
Options: control = appelt

Macro: NAME
(
	{ Token.category == Npfsi, !Lookup.majorType == geo} | 
	{ Token.category == Npmsi, !Lookup.majorType == geo } | 
	{ Token.category == Npnsi, !Lookup.majorType == geo }
)

Macro: IN
(
	{ Token.string == "-" } | { Token.string == "," } | { Token.string == "в"} | { Token.string == "във"}
)

Macro: CITY_DOT
(
	({ Token.string == "гр" } | { Token.string == "с" })
	({ Token.string == "." })
)

Macro: CITY
(
	{ Token.string == "гр"} | { Token.string == "с"} | 
	{ Token.string == "град"} | { Token.string == "село"}
)

Macro: SAINT
(
	{ Token.string == "свети" } | { Token.string == "Свети" } |
	{ Token.string == "света" } | { Token.string == "Света" } |
	{ Token.string == "св" } | { Token.string == "Св" }
)

Macro: SAINT_DOT
(
	({ Token.string == "св" } | { Token.string == "Св" })
	({ Token.string == "." })
)
 
Rule: MatchHotelAndPlace
Priority: 21
(
 ({ Lookup.majorType == hotel_type }) ?
 ( SAINT | SAINT_DOT) ?
 ( NAME ) [1,4]
 ( IN ) ? 
 ( CITY | CITY_DOT ) ? 
 ({ Lookup.majorType == geo })
)
:match
-->
:match.Hotel_Name = { rule = "MatchHotelAndPlace", matchStr = :match@string }