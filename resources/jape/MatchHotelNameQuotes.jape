Phase: HotelNames
Input: Lookup Token
Options: control = once

Macro: QUOTES
(
	{ Token.string == "\"" }
)

Rule: MatchHotelTypeAndName
Priority: 20  
(
 ({ Lookup.majorType == hotel_type}) ?
 ( QUOTES )
 ({ Token.category == Npfsi} | { Token.category == Npmsi} | { Token.category == Npnsi}) [1,4]
 ( QUOTES )
)
:match
-->
:match.Hotel_Name = { rule = "MatchHotelTypeAndName", matchStr = :match@string }

